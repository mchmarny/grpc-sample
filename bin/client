#!/bin/bash

DIR="$(dirname "$0")"
. "${DIR}/config"

export GO111MODULE=on
CGO_ENABLED=0 \
    go build -a -tags grpcping \
    -ldflags '-w -extldflags "-static"' \
    -mod vendor \
    -o ./bin/ping ./client/

export SERVICE_URL=$(gcloud beta run services describe $SERVICE \
    --platform managed \
    --region $SERVICE_REGION \
    --format="value(status.domain)")

echo "Ping using:"
echo "bin/ping --server ${SERVICE_URL/https:\/\//}:443"